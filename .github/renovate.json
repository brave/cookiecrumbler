{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>brave/renovate-config"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "enabled": true
    }
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/testcases/**",
    "**/__fixtures__/**"
  ]
}
